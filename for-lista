Ex. 2:

int soma= 0;
            for (int i = 1; i<=10;i++)
            {
                Console.WriteLine(i);
                soma += i;
            }
            Console.WriteLine(soma);
            Console.ReadLine();
            
Ex. 3:

int n = Convert.ToInt32(Console.ReadLine());
            int soma= 0;
            for (int i = 1; i<=n;i++)
            {
                Console.WriteLine(i);
                soma += i;
            }
            Console.WriteLine(soma);
            Console.ReadLine();
            
