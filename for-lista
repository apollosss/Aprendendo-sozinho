Ex. 5:


int n = Convert.ToInt32(Console.ReadLine());
            int prod= 1;
            Console.WriteLine("!" + n + " Ã©: ");
            for (int i = n; i>=1;i--)
            {
                Console.Write(i+"*");
                prod *= i;
            }
            Console.WriteLine("=" + prod);
            Console.ReadLine();
